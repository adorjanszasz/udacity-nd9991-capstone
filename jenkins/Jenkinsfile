pipeline {    
    agent any
    
    environment {
        CI = 'true' 
        registry = "adorszasz/udacity-nd9991-capstone"
        registryCredential = "dockerhub"
    }
    stages {
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'node', configId: 'node') {
                    sh 'npm install'
                }
            }
        }
        stage('Lint JS') {
            steps {
                nodejs(nodeJSInstallationName: 'node', configId: '38e63ffe-620e-46e0-b8b8-301352a0e08a') {
                    sh 'npm install eslint --save-dev'
                    sh './node_modules/.bin/eslint ./src/App.js'
                    sh './node_modules/.bin/eslint ./src/App.test.js'
                    sh './node_modules/.bin/eslint ./src/index.js'
                }
            }
        }
        stage('Test App') {
            steps {
                nodejs(nodeJSInstallationName: 'node', configId: 'node') {
                    sh './jenkins/scripts/test.sh' 
                }
            }
        }
        stage('Build docker image') {
            steps { 
                script {
                    docker.build '${registry}:${BUILD_NUMBER}'
                }
            }
        }
        stage('Push image to registry') {
            steps {
                script {
                    docker.withRegistry('', $registryCredential) {
                        docker.build('$registry:${BUILD_NUMBER}').push()
                    }
                }
            }
        }
        stage('Cleanup local docker image') {
            steps{
                sh "docker rmi ${registry}:${BUILD_NUMBER}"
            }
        }
    }
}
